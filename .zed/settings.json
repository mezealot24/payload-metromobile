{
	// File encoding settings (UTF-8 for Thai language support)
	"default_file_encoding": "utf8",
	"auto_detect_file_encoding": true,
	
	// Line ending settings (LF for consistency)
	"default_line_ending": "lf",
	"auto_detect_line_ending": true,
	
	// Editor settings for Thai language
	"soft_wrap": "editor_width",
	"word_wrap": true,
	
	// File watcher settings
	"file_watcher": {
		"enabled": true
	}
}
